<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_ideal"
    tools:context="com.example.ikhwan.applicationberatbadan.IdealActivity">

    <TextView
        android:id="@+id/label1"
        android:text="Berat Badan :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    </TextView>
    <EditText
        android:id="@+id/etBerat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberSigned|numberDecimal"
        android:layout_below="@+id/label1"
        android:layout_alignParentStart="true">
    </EditText>
    <TextView
        android:id="@+id/label2"
        android:text="Tinggi Badan :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etBerat"
        android:layout_alignParentStart="true">
    </TextView>
    <EditText
        android:id="@+id/etTinggi"
        android:text=""
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberSigned|numberDecimal"
        android:layout_below="@+id/label2"
        android:layout_alignParentStart="true">
    </EditText>
    <Button
        android:id="@+id/btnKalkulasi"
        android:text="Kalkulasi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="doKalkulasi"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/etTinggi"
        android:layout_alignParentEnd="true">
    </Button>
    <Button
        android:id="@+id/btnKembali"
        android:text="Kembali"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="BackMainMenu"
        android:layout_below="@+id/btnKalkulasi"
        android:layout_alignParentEnd="true">
    </Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nama"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
